@model IEnumerable<Basketball_WebAPI.Models.Game>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>@Html.ActionLink("Past Games", "PastGames")</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Outcome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Venue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fee)
        </th>
